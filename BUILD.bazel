alias(
    name = "gazelle",
    actual = "//gazelle/python",
    visibility = ["//visibility:public"],
)

alias(
    name = "gazelle_python_binary",
    actual = "//gazelle/python:gazelle_binary",
    visibility = ["//visibility:public"],
)

