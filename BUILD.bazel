    name = "distribution",
    srcs = glob(["**"]) + [
        "//gazelle/manifest:distribution",
        "//gazelle/modules_mapping:distribution",
        "//gazelle/python:distribution",
        "//gazelle/pythonconfig:distribution",
    ],
    visibility = ["//:__pkg__"],
